.form-group
  label(for='title') Title:
  input.form-control(type='title', placeholder='Enter event name')
.form-group
  label(for='map') Place of Event:
  input.form-control(type='map', placeholder='Enter place')
.form-group
  label(for='date') date:
  input(type='date', value='2017-12-01')
.form-group
  label(for='time') time:
  input(type='time')
.form-group
  label(for='event_des') Event description:
  textarea.form-control(name="content", rows="5")= question.content
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=question.tags ? question.tags.join(" ") : "")
.form-group
  label(for='Host_name') Host name:
  input(type='text')
.form-group
  label(for='msg') host description:
  textarea.form-control(name="content", rows="5")= question.content
.form-group
  label(for='category') category:
  br
  select
    option(value='Music') Music
    option(value='Food & Drink') Food &amp; Drink
    option(value='Classes') Classes
    option(value='Arts') Arts
    option(value='Parties') Parties
    option(value='Networking') Networking
.form-group
  label(for='fee') fee:
  br
  input(type='checkbox')
  |  free
  input(type='checkbox')
  |  pay
  input(type='text', placeholder='Enter Price')
